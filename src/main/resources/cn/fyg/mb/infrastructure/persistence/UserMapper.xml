<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.fyg.mb.infrastructure.persistence.UserMapper">

	<resultMap id="userMap" type="User">
		<id column="key_" jdbcType="VARCHAR" property="key" />
		<result column="email" jdbcType="VARCHAR" property="email" />
		<result column="cellphone" jdbcType="VARCHAR" property="cellphone" />
		<result column="realname" jdbcType="VARCHAR" property="realname" />
		<result column="password" jdbcType="VARCHAR" property="password" />
		<result column="salt" jdbcType="VARCHAR" property="salt" />
		<result column="enabled" jdbcType="BIT" property="enabled" />
	</resultMap>

	<select id="findAll" resultMap="userMap">
		select * from pm_user
	</select>

	<insert id="insert" parameterType="User">
    insert into pm_user (key_, email, cellphone, realname, password, salt, enabled)
    values (#{key,jdbcType=VARCHAR}, #{email,jdbcType=VARCHAR}, #{cellphone,jdbcType=VARCHAR}, 
    #{realname,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{salt,jdbcType=VARCHAR}, 
    #{enabled,jdbcType=BIT})
	</insert>
	
	<select id="find" resultType="User" parameterType="string" >
	    select * from
		pm_user
		where key_=#{key}
	</select>
	
	<delete id="delete" parameterType="string" >
		delete from pm_user where key_=#{key}
	</delete>

</mapper>